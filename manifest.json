{
  "manifest_version": 3,
  "name": "InspectorAI",
  "version": "1.0.0",
  "description": "Inspect HTML elements and query AI providers.",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/worker.js"
  },
  "action": {
    "default_title": "InspectorAI"
  },
  "side_panel": {
    "default_path": "src/sidepanel/panel.html"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/picker.js"],
      "css": ["src/content/picker.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
